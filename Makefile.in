SUBDIRS = translate editor perusal

World:
	$(MAKE) clean
	$(MAKE) install

all:
	for d in $(SUBDIRS); do \
		(cd $$d; $(MAKE) all) \
	done

install:
	for d in $(SUBDIRS); do \
		(cd $$d; $(MAKE) all; $(MAKE) install) \
	done

clean:
	for d in $(SUBDIRS); do \
		(cd $$d; $(MAKE) clean) \
	done

depend:
	for d in $(SUBDIRS); do \
		(cd $$d; $(MAKE) depend) \
	done






